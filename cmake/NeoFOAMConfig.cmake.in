@PACKAGE_INIT@

set(NEOFOAM_PROJECT_NAME "@PROJECT_NAME@")
set(NEOFOAM_PROJECT_VERSION @NeoFoam_VERSION@)
set(NEOFOAM_PROJECT_DESCRIPTION "@NeoFoam_DESCRIPTION@")

# Extra version information
set(NEOFOAM_VERSION_MAJOR @NeoFoam_VERSION_MAJOR@)
set(NEOFOAM_VERSION_MINOR @NeoFoam_VERSION_MINOR@)
set(NEOFOAM_VERSION_PATCH @NeoFoam_VERSION_PATCH@)

# Git information
set(NEOFOAM_GIT_BRANCH "@NEOFOAM_GIT_BRANCH@")
set(NEOFOAM_GIT_REVISION "@NEOFOAM_GIT_REVISION@")
set(NEOFOAM_GIT_SHORTREV "@NEOFOAM_GIT_SHORTREV@")

# CMake build configuration
set(NEOFOAM_BUILD_TYPE "@CMAKE_BUILD_TYPE@")
set(NEOFOAM_BUILD_SHARED_LIBS "@BUILD_SHARED_LIBS@")
set(NEOFOAM_DEBUG_POSTFIX "@CMAKE_DEBUG_POSTFIX@")

# Compiler configuration
set(NEOFOAM_CXX_COMPILER "@CMAKE_CXX_COMPILER@")
set(NEOFOAM_CXX_COMPILER_VERSION @CMAKE_CXX_COMPILER_VERSION@)

set(NEOFOAM_CXX_FLAGS "@CMAKE_CXX_FLAGS@")
set(NEOFOAM_CXX_FLAGS_DEBUG "@CMAKE_CXX_FLAGS_DEBUG@")
set(NEOFOAM_CXX_FLAGS_RELEASE "@CMAKE_CXX_FLAGS_RELEASE@")

set(NEOFOAM_EXE_LINKER_FLAGS "@CMAKE_EXE_LINKER_FLAGS@")
set(NEOFOAM_EXE_LINKER_FLAGS_DEBUG "@CMAKE_EXE_LINKER_FLAGS_DEBUG@")
set(NEOFOAM_EXE_LINKER_FLAGS_RELEASE "@CMAKE_EXE_LINKER_FLAGS_RELEASE@")

# NeoFoam configuration
set(NEOFOAM_BUILD_TESTS @NEOFOAM_BUILD_TESTS@)

set(NEOFOAM_SKIP_DEPENDENCY_UPDATE @NEOFOAM_SKIP_DEPENDENCY_UPDATE@)
set(NEOFOAM_EXPORT_BUILD_DIR @NEOFOAM_EXPORT_BUILD_DIR@)
set(NEOFOAM_VERBOSE_LEVEL @NEOFOAM_VERBOSE_LEVEL@)

set(NEOFOAM_WITH_CLANG_TIDY @NEOFOAM_WITH_CLANG_TIDY@)
set(NEOFOAM_WITH_IWYU @NEOFOAM_WITH_IWYU@)
set(NEOFOAM_CLANG_TIDY_PATH @NEOFOAM_CLANG_TIDY_PATH@)
set(NEOFOAM_IWYU_PATH @NEOFOAM_IWYU_PATH@)

# NeoFoam compiler information
set(NEOFOAM_CXX_COMPILER "@CMAKE_CXX_COMPILER@")
set(NEOFOAM_CXX_COMPILER_SHORT "@CMAKE_CXX_COMPILER_ID@:@CMAKE_CXX_COMPILER_VERSION@")

# NeoFoam installation configuration
set(NEOFOAM_INSTALL_PREFIX "@PACKAGE_CMAKE_INSTALL_PREFIX@")
set(NEOFOAM_INSTALL_INCLUDE_DIR "@PACKAGE_CMAKE_INSTALL_FULL_INCLUDEDIR@")
set(NEOFOAM_INSTALL_LIBRARY_DIR "@PACKAGE_CMAKE_INSTALL_FULL_LIBDIR@")
set(NEOFOAM_INSTALL_RPATH_FOR_HIP "-Wl,-rpath,${NEOFOAM_INSTALL_LIBRARY_DIR}")
set(NEOFOAM_INSTALL_RPATH @NEOFOAM_INSTALL_RPATH@)
set(NEOFOAM_INSTALL_RPATH_USE_ORIGIN @NEOFOAM_INSTALL_RPATH_USE_ORIGIN@)
set(NEOFOAM_INSTALL_RPATH_DEPENDENCIES @NEOFOAM_INSTALL_RPATH_DEPENDENCIES@)

list(APPEND CMAKE_PREFIX_PATH "${NEOFOAM_INSTALL_PREFIX}")

set(NEOFOAM_INTERFACE_LINK_LIBRARIES "@NEOFOAM_INTERFACE_LINK_LIBRARIES@")
set(NEOFOAM_INTERFACE_LINK_FLAGS "@NEOFOAM_INTERFACE_LINK_FLAGS@")
set(NEOFOAM_INTERFACE_CXX_FLAGS "@NEOFOAM_INTERFACE_CXX_FLAGS@")
